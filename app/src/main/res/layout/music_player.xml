<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <ImageButton
        android:id="@+id/pauseplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:src="@drawable/pause"
        android:background="#00000000"
        />

    <ImageButton
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/pauseplay"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/pauseplay"
        app:layout_constraintBottom_toBottomOf="@id/pauseplay"
        android:src="@drawable/previous"
        android:background="#00000000"
        />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pauseplay"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/pauseplay"
        app:layout_constraintBottom_toBottomOf="@id/pauseplay"
        android:src="@drawable/next"
        android:background="#00000000"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="300dp"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pauseplay"
        android:padding="30dp"
        android:background="#aaaaaa"
        />

    <ProgressBar
        android:id="@+id/currentProgress"
        android:layout_width="30dp"
        android:layout_height="5dp"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintBottom_toTopOf="@id/pauseplay"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/progressBar"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        android:text="0:18"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/maxTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/progressBar"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        android:text="3:04"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressBar"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#00000000"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/separator"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auteur"
            android:textSize="16sp"
            android:textColor="#aaaaaa"
            android:background="#00000000"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/separator"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025"
            android:textSize="16sp"
            android:textColor="#aaaaaa"
            android:background="#00000000"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/cover"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/info"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="30dp"
        />

    <ImageButton
        android:id="@+id/lyrics"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dp"
        android:src="@drawable/lyrics"
        />

    <LinearLayout
        android:id="@+id/lyricsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/lyricsText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>